{% apply inline_css %}
 <style>
    h1 {
        color:blue;
    }
    h3 {
        color:red;
    }
 </style>
{% endapply %}

<h1>Commande #{{ id }}</h1>
<hr>
<p><strong>Date : {{ date | date('d-m-Y') }}</strong></p>
<hr>
<h3>Produits</h3>


<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">P.U</th>
                <th scope="col" >Qté</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
            {% for content in contents %}
                {# {% for list in content.listProduct.commande.commandeListProduct.contentLists %} #}
                    {% for product in content.products %}
                
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="d-flex flex-column align-items-center justify-content-center">
                                        <p>{{ product.name }}</p>
                                    </div>
                                </div>
                            </td>
                            <td>{{ product.price | euroPrice }}</td>
                            <td>
                                <button class="btn btn-light">{{ content.qty }}</button>
                            </td>
                            <td>{{ ( content.qty * product.price ) | euroPrice }}</td>
                        </tr>
                        
                        

                    {% endfor %}
                {# {% endfor %} #}
            {% endfor %}
            <tr>
                <th colspan="2"></th>
                <th><strong>Sous Total</strong></th>
                <th><strong>{{ total | euroPrice }}</strong></th>
            </tr>
        </tbody>
    </table>
</div>

<hr>
<h3>Adresse de livraison</h3> 
<p>Ville : {{ adress.city }}</p>
<p>Code Postal : {{ adress.cp }}</p>
<p>Rue : {{ adress.adress }}</p>

<hr>
<h3>Service client</h3> 
<p>En cas de problèmes. Merci de contacter le support.</p>





