{% extends 'customer/base.html.twig' %}

{% block title %}D&MStore{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="col-12 d-flex justify-content-center align-items-center">
            {{ form_start(registrationForm, {'action': path('register_user'), 'method': 'POST', 'attr': {'class': 'col-lg-8 cardForm border3 d-flex flex-wrap flex-column justify-content-center align-items-center py-3'}}) }}
                <div class="py-3">
                    <h3 class="text-center colortitleBlue">Inscription</h3>
                </div>

                <div class="py-3 text-center border1 d-flex align-items-center justify-content-around col-lg-10">
                    <div>
                        <label for="inputEmail" class="labelStyle">Email</label>                                 
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'myRounded'}}) }}
                    </div>
                    <div>
                        <label for="inputEmail" class="labelStyle">Mot de passe</label>                                 
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'myRounded'}}) }} 
                    </div>                                                                                                           
                </div>

                <div class="py-3 text-center border2 d-flex align-items-center justify-content-around col-lg-10">
                    <div>
                        <label for="inputEmail" class="labelStyle">Prenom</label>                                 
                        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'myRounded'}}) }}
                    </div>
                    <div>
                        <label for="inputEmail" class="labelStyle">Nom</label>                                 
                        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'myRounded'}}) }}
                    </div>
                    <div>
                        <label for="inputEmail" class="labelStyle">Age</label>                                 
                        {{ form_widget(registrationForm.age, {'attr': {'class': 'myRounded'}}) }}
                    </div>
                </div>

                <div class="text-center py-3 border3 d-flex align-items-center justify-content-around col-lg-10">
                    <div>
                        <label for="inputEmail" class="labelStyle">Date de naissance</label>                                 
                        {{ form_widget(registrationForm.dateofbirth, {'attr': {'class': 'myRounded'}}) }}                                  
                    </div>
                    <div>
                        <label for="inputEmail" class="labelStyle">Adresse</label>
                        {{ form_widget(registrationForm.adress, {'attr': {'class': ' myRounded'}}) }}
                    </div>
                </div>

                <div class="text-center py-3 border4 d-flex align-items-center justify-content-around col-lg-10">
                    <div>
                        <label for="inputEmail" class="labelStyle">CP</label>
                        {{ form_widget(registrationForm.cp, {'attr': {'class': 'myRounded'}}) }}
                    </div>
                    <div>
                        <label for="inputEmail" class="labelStyle">Ville</label>
                        {{ form_widget(registrationForm.city, {'attr': {'class': ' myRounded'}}) }}
                    </div>
                </div>

                <div class="">
                    <button class="btnStyle" type="submit">
                        S'inscrire
                    </button>
                </div>

            {{ form_end(registrationForm) }}
            
