<div class="container">
        <div class="col-12">
            <div class="card my-5">
                <div class="card-header">
                    <h1 class="text-center colortitleBlue">Modifier une cat√©gorie</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="d-flex justify-content-center align-items-center my-3">
                            <label for="" class="labelStyle h4 py-2">Choisir le nom de la categorie</label>
                            {{ form_widget(form.name,{'attr': {'class': 'py-3 rounded-pill'}}) }}
                        </div>
                        <div class="d-flex justify-content-center align-items-center my-3">
                            <label for="" class="labelStyle h4 py-2">Choisir le fichier</label>
                            {{ form_widget(form.file) }}
                        </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center align-items-center ">
                        <button class="btn btn-secondary px-3 mx-5" type="submit">{{ button_label|default('Save') }}</button>
                        <a class="btn btn-secondary px-3 mx-5" href="{{ path('category_index') }}">Retour</a>
                        {{ form_end(form) }} 
                    </div>
                </div>
            </div>
        </div>
</div>

