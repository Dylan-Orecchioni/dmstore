{% extends "admin/base_admin.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 mt-3 d-flex justify-content-around align-items-center">
                <h1 class="text-center py-5">Liste des cat√©gories</h1>
                <a class="btn btn-primary" href="{{ path('category_new') }}">Ajouter</a>
            </div>
            {% for category in categories %}
                <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <img src="{{ asset(category.imagePath) }}" alt="{{ category.name }}" class="card-img-top w-" style="height: 30vh;">
                        </div>
                        <div class="card-body">
                            <h5 class="text-center">{{ category.name }}</h5>
                        </div>
                        <div class="card-footer d-flex flex-column">
                            <a class="btn btn-primary" href="{{ path('category_show',{'id' : category.id }) }}">Voir plus</a>
                            <a class="btn btn-info" href="{{ path('category_edit',{'id' : category.id }) }}">Modifier</a>
                            {% include "admin/category/_delete_form.html.twig" %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    
    </div>
{% endblock %}