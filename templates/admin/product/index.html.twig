{% extends "admin/base_admin.html.twig" %}

{% block body %}

    <div class="container">
        <div class="row d-center">
            <div class="col-12 mt-3 d-center justify-content-around">
                <h1 class="text-center fontTitle colortitleRed py-5">Liste des Produits</h1>
            </div>
            {% for product in products %}
                <div class="col-sm-12 col-md-9 col-lg-4 mt-3 d-center">
                    <div class="card col-10 col-md-12">
                        <div class="card-header">
                            <img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="card-img-top imgCard">
                        </div>
                        <div class="card-body">
                            <h5 class="text-center">{{ product.name }}</h5>
                        </div>
                        <div class="card-footer d-flex flex-column">
                            <a class="btn btnBlue" href="{{ path('product_show',{'id' : product.id }) }}">Voir plus</a>
                            <a class="btn btn-light" href="{{ path('product_edit',{'id' : product.id }) }}">Modifier</a>
                            {% include "admin/product/_delete_form.html.twig" %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    
    </div>
{% endblock %}