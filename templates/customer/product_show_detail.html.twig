{% extends "customer/base.html.twig" %}


{% block body %}

    <div class="container py-5">

        <div class="row">

            <div class="col-12 mt-3">
                {% include "customer/shared/_messages_flash.html.twig" %}
            </div>

            <div class="col-sm-12 col-md-6">
                <img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="w-100 imageProductPage">
            </div>

            <div class="col-sm-12 col-md-6">
                <div class="card cardProduct">
                    <div class="card header bg-light">
                        <h3 class="fontTitle colortitleRed text-center">{{ product.name }}</h3>
                    </div>
                    <div class="card-body">
                        <p class="fontTitle colortitleBlue fw-bold text-center">{{ product.price | euroPrice}}</p>
                    </div>
                    <div class="card-footer d-center">
                        <a href="{{ path('add_product',{'id' : product.id}) }}" class="btn btnStyle">Ajouter au panier</a>
                    </div>
                </div>
            </div>

        
        </div>

    </div>
{% endblock %}