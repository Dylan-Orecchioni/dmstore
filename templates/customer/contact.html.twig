{% extends "customer/base.html.twig" %}


{% block body %}

<div class="container">
    <div class="cardForm col-12 d-center my-4">
        {{ form_start(form, {'action': path('customer_contact'), 'method': 'POST', 'attr': {'class': 'col-sm-10 col-md-12 col-lg-10 d-center flex-column'}}) }}
            <div>
                <h3 class="py-4 text-center colortitleBlue text-uppercase">Contactez-nous !</h3>
            </div>
            <div class="col-sm-12 col-md-11 col-lg-12 d-flex justify-content-around form column">
                <div class="col-sm-12 col-md-12 col-lg-5 d-flex flex-column">
                    <label for="inputEmail" class="labelStyle text-uppercase">Email</label>                                 
                    {{ form_widget(form.email, {'attr': {'class': 'mb-3 p-3 myRounded'}}) }}
                </div>
                <div class="d-flex flex-column col-sm-12 col-md-12 col-lg-5">
                    <label for="inputEmail" class="labelStyle text-uppercase">Objet</label>                                 
                    {{ form_widget(form.subject, {'attr': {'class': 'mb-3 p-3 col-lg-12 myRounded'}}) }} 
                </div>                                                                                                           
            </div>

            <div class="col-sm-12 col-md-11 col-lg-12 d-center flex-column">
                <div class="d-flex flex-column col-sm-12 col-md-12 col-lg-11 textArea">
                    <label for="inputEmail" class="labelStyle text-uppercase">Message</label>                                 
                    {{ form_widget(form.content, {'attr': {'class': 'p-3 myTextArea'}}) }}
                </div>
                <div class="my-3">
                    <button class="btnStyle" type="submit">
                        ENVOYER
                    </button>
                </div>

            </div>


        {{ form_end(form) }}
    </div>          
</div>

{% endblock %}