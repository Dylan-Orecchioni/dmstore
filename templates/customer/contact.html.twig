{% extends "customer/base.html.twig" %}


{% block body %}

    <div class="container-fluid">
        <div class="cardForm col-12 my-4">
            {{ form_start(form, {'action': path('customer_contact'), 'method': 'POST', 'attr': {'class': 'col-12 d-center flex-column'}}) }}
                <div>
                    <h3 class="col-12 py-4 text-center colortitleBlue text-uppercase">Contactez-nous !</h3>
                </div>
                <div class="d-center flex-wrap col-12">
                    <div class="d-center flex-wrap col">
                        <label for="inputEmail" class="labelStyle text-uppercase">Email</label>                                 
                        {{ form_widget(form.email, {'attr': {'class': 'p-2 col-lg-10 myRounded'}}) }}
                    </div>
                    <div class="d-center flex-wrap col">
                        <label for="inputEmail" class="labelStyle text-uppercase">Objet</label>                                 
                        {{ form_widget(form.subject, {'attr': {'class': 'p-2 col-lg-10 myRounded'}}) }} 
                    </div>                                                                                                           
                </div>

                <div class="d-center flex-wrap col-12">
                    <div class="col d-center column flex-wrap textArea">
                        <label for="inputEmail" class="labelStyle text-uppercase">Message</label>                                 
                        {{ form_widget(form.content, {'attr': {'class': 'py-3 col-12 col-lg-12 myTextArea '}}) }}
                    </div>
                </div>
                <div class="my-3">
                    <button class="btnStyle" type="submit">
                        ENVOYER
                    </button>
                </div>



            {{ form_end(form) }}
        </div>          
    </div>

{% endblock %}