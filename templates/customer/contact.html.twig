{% extends "customer/base.html.twig" %}


{% block body %}

<div class="container py-5">
        <div class="row">
            <div class="col-sm-12 col-md-10 col-lg-11">
                <div class="cardForm">
                    <div class="cardStyle">

                        {{ form_start(form, {'action': path('register_user'), 'method': 'POST'}) }}

                        <h3 class="text-center colortitleBlue text-uppercase">Contactez-nous !</h3>

                            <div class="d-flex justify-content-around align-items-center p-2 my-3">
                                <div class="d-flex flex-column col-6">
                                    <label for="inputEmail" class="labelStyle text-uppercase">Email</label>                                 
                                    {{ form_widget(form.email, {'attr': {'class': 'p-3 myRounded'}}) }}
                                </div>
                                <div class="d-flex flex-column col-4">
                                    <label for="inputEmail" class="labelStyle text-uppercase">Objet</label>                                 
                                    {{ form_widget(form.subject, {'attr': {'class': 'p-3 myRounded'}}) }} 
                                </div>                                                                                                           
                            </div>

                            <div class="d-flex justify-content-around align-items-center p-2 my-3">
                                <div class="d-flex flex-column col-7">
                                    <label for="inputEmail" class="labelStyle text-uppercase">Message</label>                                 
                                    {{ form_widget(form.content, {'attr': {'class': 'p-3 myTextArea'}}) }}
                                </div>
                                <div class="d-flex justify-content-center align-items-end pt-3 mt-5">
                                    <button class="btnStyle" type="submit">
                                        ENVOYER
                                    </button>
                                </div>
 
                            </div>


                        {{ form_end(form) }}
                    </div>                      
                </div>          
            </div>

{% endblock %}